      <section class="pokemon flexItem">
        <div class="pokemon-sprite-front-container">
          {{#if front-sprite}}
            <img class="sprite pokemon-sprite-front-img" src="{{front-sprite}}">
          {{else}}
            <img class="sprite pokemon-sprite-front-img" src="/frontSprites/{{pokedex_number}}.png">
          {{/if}}
        </div>
        <div class="pokemon-text">
          <p class="name">
            Name: {{name}}
          </p>
          <p class="id">
            ID: {{pokedex_number}}
          </p>
          <p class="stat hp">
            HP: {{hp}}
          </p>
          <p class="stat atk">
            ATK: {{attack}}
          </p>
          <p class="stat hp">
            DEF: {{defense}}
          </p>
          <p class="stat atk">
            SP_ATK: {{sp_attack}}
          </p>
          <p class="stat hp">
            SP_DEF: {{sp_defense}}
          </p>
          <p class="stat atk">
            SPD: {{speed}}
          </p>
          <p class="other-stats">
            Other stats:
            <ol class="other-stats-list">
                <li class="first-stat">Weight: {{weight_kg}}kg</li>
                <li class="second-stat">Japanese Name: {{japanese_name}}</li>
                <li class="third-stat">Generation: {{generation}}</li>
            </ol>
          </p>
        </div>
      </section>
